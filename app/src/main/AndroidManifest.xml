<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-sdk
        android:minSdkVersion="26"
        tools:overrideLibrary="com.google.android.gms.ads_identifier" />

    <!-- Core Permissions for Safe Voice -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- Location Permissions for Safe Voice -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <!-- KYC Permissions for Safe Voice -->
    <uses-permission android:name="android.permission.CAMERA" />

    <!-- Declare hardware features Safe Voice uses -->
    <uses-feature android:name="android.hardware.camera" android:required="true" />
    <uses-feature android:name="android.hardware.microphone" android:required="true" />

    <application
        android:name=".SafeVoiceApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SafeVoice3"
        tools:targetApi="31">

        <!-- DisclaimerActivity is the LAUNCHER, ensuring user agrees to terms first -->
        <activity
            android:name=".DisclaimerActivity"
            android:exported="true"
            android:theme="@style/Theme.SafeVoice3.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- The main app interface, launched after the disclaimer is accepted -->
        <activity
            android:name=".MainActivity"
            android:exported="false" />

        <!-- The screen for user identity verification -->
        <activity
            android:name=".KycActivity"
            android:exported="false"
            android:label="Verify Your Identity" />

        <!-- The screen for Google Sign-In -->
        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:label="Sign In" />
            
        <!-- NEW: The full-screen activity for receiving emergency alerts -->
        <activity
            android:name=".EmergencyPopupActivity"
            android:exported="false"
            android:launchMode="singleTop"
            android:showOnLockScreen="true"
            android:theme="@style/Theme.SafeVoice3.NoActionBar" />

        <!-- The "Always Listening" background service -->
        <service
            android:name=".services.VoiceRecognitionService"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="microphone" />

        <!-- The service that handles sending alerts after a trigger -->
        <service
            android:name=".services.EmergencyHandlerService"
            android:enabled="true"
            android:exported="false" />

        <!-- NEW: The service for receiving Firebase Cloud Messaging alerts -->
        <service
            android:name=".services.FirebaseAlertService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <!-- CRITICAL: Disables default Firebase initializer for dynamic loading -->
        <provider
            android:name="com.google.firebase.provider.FirebaseInitProvider"
            android:authorities="${applicationId}.firebaseinitprovider"
            tools:node="remove" />

    </application>

</manifest>